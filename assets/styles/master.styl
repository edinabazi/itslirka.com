// Import Stylus plugins
@import 'jeet'
@import 'nib'
@import 'rupture'

// Import partial styles
@import '_fonts.styl'
@import '_vars.styl'
@import '_partials.styl'
@import '_loader.styl'
// @import '_scrollbar.styl'
@import '_animations.styl'

// Import Views

@import '_home.styl'

// Selection Color
selection()
global-reset()

// Main body styles

html
  position relative 
  
  &.no-js
    opacity 1
    .no-js-alert
      display block
  &.js
    .no-js-alert
      display none



// Body

body
  font()
  background-color white
  color $color-black
  position relative
  &.no-scroll
    max-height 100vh
    overflow hidden

main
  height 100vh
  display flex
  flex-direction column
  .middle
    display flex
    flex-direction column
    align-items center
    justify-content center
    flex 1
    .email
      margin-top 5vh
      margin-bottom 5vh
      h1
        font-size 8vw
        font-variation-settings "wght" 600
        a
          color $color-black
          text-decoration none
    .titles
      display flex
      li
        font-size 2vw
        font-variation-settings "wght" 440
        &:not(:last-child)
          margin-right 3vw
        +below(800px)
          font-size 4vw
  .bottom
    display flex
    justify-content center
    padding-bottom 3vw
    ul
      display flex
      li
        &:not(:last-child)
          margin-right 3vw
          +below(700px)
            margin-right 10vw
        svg
          height 50px

  &.dark
    background-color $color-black
    color $color-white
    a
      color $color-white
    .llama
      svg
        path
          fill $color-white
    .middle
      .email
        h1
          a
            color $color-white
    .bottom
      ul
        li
          svg
            path, polygon
              fill $color-white