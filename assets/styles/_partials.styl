// Apply a natural box layout model to all elements

*,
*:before,
*:after
  box-sizing border-box
  

  
// Some helper classes

.hidden
  display none
.bold
  font-weight 700
.italic
  font-style italic
  


// Selection and tap highlight color
  
selection()
  ::-moz-selection
    background-color $color-yellow
    color $color-black
  ::selection
    background-color $color-yellow
    color $color-black
    
*
  -webkit-tap-highlight-color rgba($color-black, 0.4)


// No JS Alert and remove noscroll if no-js
    
.no-js-alert
  width 100%
  background-color #ff0000
  color #fff
  text-align center
  position relative
  top 0
  left 0
  z-index 7000
  margin-bottom $pad
  padding ($pad/2)
  a
    color #fff
    text-decoration underline

html
  &.no-js
    body.noscroll
      overflow visible
    main
      opacity 1
      visibility visible
      



// Define main containers

.big-container
  padding-left 10vw
  padding-right 10vw

.container
  max-width $container
  margin 0 auto
  +below($container)
    padding 0 ($pad/2)
  
.small-container
  max-width $smallContainer
  margin 0 auto
  +below($smallContainer)
    padding 0 ($pad/2)
