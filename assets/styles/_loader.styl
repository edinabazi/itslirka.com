@keyframes mac-zoom
  0%
    transform scale(1)
  100%
    transform scale(9)

.loader-wrapper
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color $color-yellow
  z-index 5000
  display flex
  justify-content center
  align-items center
  transition 1s $easing
  .loader-content
    width 80px
    height 80px
    position relative
    transition .3s
    span.symbol
      display block
      font-size 68px
      font-weight 900
      color $color-black
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      opacity 0
      display flex
      justify-content center
      align-items center
      &.hidden
        opacity 0 !important
    &.fade-away
      transform scale(0)
  &.go-away
    transform translateY(-100%)
